<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="#FDF8F0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이윗"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#FDA521"
            android:layout_marginLeft="15dp" />

        <!-- 검색 아이콘 추가 -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:background="#FDF8F0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_animalImg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/imgmain1"
            android:layout_marginLeft="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/main_animalNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동글이"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/main_aniamlAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2세 - 코리안숏헤어"
                android:textSize="15dp"
                android:textColor="#7D4B00"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 산책로"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/main_newHPT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 동물병원"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/main_hotPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기이야기"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/main_recentPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근이야기"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/main_neighborHPT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주변 동물병원"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"/>

        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_home"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/main_peed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_new"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/main_findHPT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_hpt"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/main_myPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_mypage"
            android:scaleType="fitCenter"/>
    </LinearLayout>

</LinearLayout>